{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "CommonJS",
		"target": "ESNext",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"noImplicitAny": true,
		"removeComments": true,
		"rootDir": "./src",
		"outDir": "./dist"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
